<div class="stream-slider" id="item-{{ id }}" style="background:{{ prop.background }}">
	{% for item in prop.innerElements %}
		<input class="stream-slider-dot-indicator" type="radio" name="slider-nav-{{ id }}" id="block-{{ id }}-dot-{{ loop.index }}" {% if loop.index == 1 %} checked {% endif %}>
	{% endfor %}
	<div class="stream-slider-section-wrap stream-slider-section-wrap-{{prop.contentPosition}}">
		<div class="stream-slide-img-wrapper">
			<div class="stream-slide-wrapper">
				{% for item in prop.innerElements %}
					<div class="stream-slide {% if loop.index == 1 %} stream-slide--active{% endif %}" style="background:{{ item.props.background }}; align-items: {{ item.props.alignItems}}">
						<div class="stream-slide-inner">
							{% if item.props.youtubeID is not empty %}
								<div class="stream-slider-youtube__video">
									<iframe src="https://www.youtube.com/embed/{{ item.props.youtubeID }}?enablejsapi=1&rel=0&autoplay=0" frameborder="0" style="border-radius: {{ prop.borderRadius}}px;"></iframe>
								</div>
							{% else %}
								{% if item.props.videoSrc is not empty %}
									<video src="{{ item.props.videoSrc }}" {% if item.props.poster is not empty %} poster="{{ item.props.poster }}" {% endif %}  {% if item.props.controls == 'true' %} controls {% endif %}  playsinline muted {% if item.props.autoplay == 'true' %} autoplay {% endif %} {% if item.props.repeat == 'true' %} loop {% endif %} style="border-radius: {{ prop.borderRadius}}px;"></video>
								{% else %}
									<div class="stream-slide-img">
										<div class="stream-slide-img-inner">
											{% if item.props.srcMob is defined and item.props.srcMob is not empty %}
												<img src="{{item.props.src}}" alt="" class="stream-desktop-show" style="border-radius: {{ prop.borderRadius}}px;"/>
												<img src="{{item.props.srcMob}}" alt="" class="stream-mobile-show" style="border-radius: {{ prop.borderRadius}}px;"/>
											{% else %}
												<img src="{{item.props.src}}" alt="" style="border-radius: {{ prop.borderRadius}}px;"/>
											{% endif %}
										</div>
									</div>
								{% endif %}
							{% endif %}
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="stream-slider-nav">
				<div class="stream-slider-nav-prev-wrap">
					{% for item in prop.innerElements %}
						<label class="stream-slider-nav-prev" for="block-{{ id }}-dot-{{ loop.index }}">
							{% if prop.customArrow is not empty %}
								<div class="stream-custom-arrow-prev">
									{{ prop.customArrow |striptags('<br>')|raw }}
								</div>
							{% else %}
								<svg width="60" height="60" viewbox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M30 0C46.5425 0 60 13.4575 60 30C60 46.5425 46.5425 60 30 60C13.4575 60 0 46.5425 0 30C0 13.4575 13.4575 0 30 0ZM20.7325 31.7675L33.2325 44.2675C33.72 44.755 34.36 45 35 45C35.64 45 36.2801 44.755 36.7676 44.2675C37.745 43.29 37.745 41.71 36.7676 40.7325L26.035 30L36.7675 19.2675C37.7449 18.29 37.7449 16.71 36.7675 15.7325C35.79 14.7551 34.21 14.7551 33.2325 15.7325L20.7325 28.2326C19.755 29.21 19.755 30.79 20.7325 31.7675Z" fill="{{ prop.arrowsColor }}"/>
								</svg>
							{% endif %}
						</label>
					{% endfor %}
				</div>
				<div class="stream-slider-nav-next-wrap">
					{% for item in prop.innerElements %}
						<label class="stream-slider-nav-next" for="block-{{ id }}-dot-{{ loop.index }}">
							{% if prop.customArrow is not empty %}
								<div class="stream-custom-arrow-next">
									{{ prop.customArrow |striptags('<br>')|raw }}
								</div>
							{% else %}
								<svg v-else width="60" height="60" viewbox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M30 0C13.4575 0 0 13.4575 0 30C0 46.5425 13.4575 60 30 60C46.5425 60 60 46.5425 60 30C60 13.4575 46.5425 0 30 0ZM39.2675 31.7675L26.7675 44.2675C26.28 44.755 25.64 45 25 45C24.36 45 23.7199 44.755 23.2324 44.2675C22.255 43.29 22.255 41.71 23.2324 40.7325L33.965 30L23.2325 19.2675C22.2551 18.29 22.2551 16.71 23.2325 15.7325C24.21 14.7551 25.79 14.7551 26.7675 15.7325L39.2675 28.2326C40.245 29.21 40.245 30.79 39.2675 31.7675Z" fill="{{ prop.arrowsColor }}"/>
								</svg>
							{% endif %}
						</label>
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="stream-slide-wrapper stream-slide-content-wrapper">
			{% for item in prop.innerElements %}
				<div class="stream-slide {% if loop.index == 1 %} stream-slide--active{% endif %}" style="background:{{ item.props.background }}">
					<div class="stream-slide-inner">
						<div class="stream-slide-content">
							{% if item.props.titleContent is not empty %}
								<div class="stream-slide-title {% if prop.titleFontSize is defined  %} stream-text-{{ prop.titleFontSize }} {% endif %}" style="text-align: {{ prop.textAlign }}; --textalignmobile: {{ prop.textAlignMobile }}; color: {{ item.props.titleColor }}; font-family: {{ prop.titleFontFamily }}; font-weight: {{ prop.titleFontWeight }};">
									{{ item.props.titleContent |striptags('<br>')|raw }}
								</div>
							{% endif %}
							{% if item.props.descriptionContent is not empty %}
								<div class="stream-slide-description {% if prop.descriptionFontSize is defined  %} stream-text-{{ prop.descriptionFontSize }} {% endif %}" style="text-align: {{ prop.textAlign }}; --textalignmobile: {{ prop.textAlignMobile }}; color: {{ item.props.descriptionColor }}; font-family: {{ prop.descriptionFontFamily }}; font-weight: {{ prop.descriptionFontWeight }};">
									{{ item.props.descriptionContent | striptags('<br>')|raw }}
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="stream-slide-wrapper stream-slide-disclaimer-wrapper">
			{% for item in prop.innerElements %}
				<div class="stream-slide {% if loop.index == 1 %} stream-slide--active{% endif %}" style="background:{{ item.props.background }}">
					<div class="stream-slide-inner stream-slide-inner-{{prop.contentPosition}}">
						{% if item.props.disclaimerContent is not empty %}
							<div class="stream-slide-disclaimer {% if prop.disclaimerFontSize is defined  %} stream-text-{{ prop.disclaimerFontSize }} {% endif %}" style="text-align: {{ prop.textAlign }}; --textalignmobile: {{ prop.textAlignMobile }}; color: {{ item.props.disclaimerColor }}; font-family: {{ prop.disclaimerFontFamily }}; font-weight: {{ prop.disclaimerFontWeight }};">
								{{ item.props.disclaimerContent | striptags('<br>')|raw }}
							</div>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="stream-slider-dots">
		{% for item in prop.innerElements %}
			<label class="stream-slider-dot" for="block-{{ id }}-dot-{{ loop.index }}" style="background:{{ prop.dotsColor }};color: {{ prop.activeDotColor }};"></label>
		{% endfor %}
	</div>
</div>
