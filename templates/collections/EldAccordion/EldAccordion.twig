<div class="stream-accordion" id="item-{{ id }}">
	<input class="stream-accordion-indicator" type="checkbox" name="stream-accordion-{{ id }}" id="stream-accordion-{{ id }}"/>
	<div class="stream-accordion-image" style="background: {{ prop.background }}">
		{% if prop.youtubeID is not empty %}
		<div class="stream-accordion-youtube__video">
			<iframe src="https://www.youtube.com/embed/{{ prop.youtubeID }}?enablejsapi=1&rel=0&autoplay=0" frameborder="0" style="border-radius: {{ prop.borderRadius}}px;"></iframe>
		</div>
	{% else %}
		{% if prop.videoSrc is not empty %}
			<video src="{{ prop.videoSrc }}" {% if prop.poster is not empty %} poster="{{ prop.poster }}" {% endif %}  {% if prop.controls == 'true' %} controls {% endif %}  playsinline muted {% if prop.autoplay == 'true' %} autoplay {% endif %} {% if prop.repeat == 'true' %} loop {% endif %} style="border-radius: {{ prop.borderRadius}}px;"></video>
		{% else %}
			<img src="{{ prop.src }}" alt="" style="border-radius: {{ prop.borderRadius}}px;"/>
		{% endif %}
	{% endif %}
	</div>
	<div class="stream-accordion-content stream-{{ prop.spacer }}-spacer">
		{% for item in prop.innerElements %}
			<div class="stream-accordion-content-item stream-{{ item.props.imgPosition }} stream-{{ item.props.imgPositionMobile }}-mobile" style="background: {{ item.props.background }}">
				<div class="stream-accordion-content-item-inner">
					<div class="stream-accordion-content-img">
					{% if item.props.youtubeID is not empty %}
						<div class="stream-accordion-content-youtube__video">
							<iframe src="https://www.youtube.com/embed/{{ item.props.youtubeID }}?enablejsapi=1&rel=0&autoplay=0" frameborder="0" style="border-radius: {{ prop.borderRadius}}px;"></iframe>
						</div>
					{% else %}
						{% if item.props.videoSrc is not empty %}
							<video src="{{ item.props.videoSrc }}" {% if item.props.poster is not empty %} poster="{{ item.props.poster }}" {% endif %}  {% if item.props.controls == 'true' %} controls {% endif %}  playsinline muted {% if item.props.autoplay == 'true' %} autoplay {% endif %} {% if item.props.repeat == 'true' %} loop {% endif %} style="border-radius: {{ prop.borderRadius}}px;"></video>
						{% else %}
							<img src="{{ item.props.src }}" alt="" style="border-radius: {{ prop.borderRadius}}px;"/>
						{% endif %}
					{% endif %}
					</div>
					<div class="stream-accordion-content-content">
						<div class="stream-accordion-content-title stream-text-{{ item.props.titleFontSize }}" style="text-align: {{ item.props.textAlign }}; --textalignmobile: {{ item.props.textAlignMobile }}; color: {{ item.props.titleColor }}; font-family: {{ prop.titleFontFamily }}; font-weight: {{ prop.titleFontWeight }};">{{ item.props.titleContent | striptags('<br>')|raw }}</div>
						<div class="stream-accordion-content-description stream-text-{{ item.props.descriptionFontSize }}" style="text-align: {{ item.props.textAlign }}; --textalignmobile: {{ item.props.textAlignMobile }}; color: {{ item.props.descriptionColor }}; font-family: {{ prop.descriptionFontFamily }}; font-weight: {{ prop.descriptionFontWeight }};">{{ item.props.descriptionContent | striptags('<br>')|raw }}</div>
					</div>
				</div>
				{% if item.props.disclaimerContent is not empty %}
					<div class="stream-accordion-content-item-disclaimer stream-text-{{ item.props.disclaimerFontSize }}" style="text-align: {{ item.props.disclaimerTextAlign }}; color: {{ item.props.disclaimerColor }}; font-family: {{ prop.descriptionFontFamily }}; font-weight: {{ prop.descriptionFontWeight }}">{{ item.props.disclaimerContent | striptags('<br>')|raw }}</div>
				{% endif %}
			</div>
		{% endfor %}
	</div>
	<label class="stream-accordion-button{% if prop.customCloseIcon is not empty %} stream-accordion-button-no-rotate{% endif %}" for="stream-accordion-{{ id }}">
		{% if prop.customIcon is not empty %}
			{% if prop.customCloseIcon is not empty %}
				<div class="stream-custom-button-open">{{ prop.customIcon |raw}}</div>
				<div class="stream-custom-button-close">{{ prop.customCloseIcon |raw}}</div>
			{% else %}
				<div class="stream-custom-button">
					{{ prop.customIcon |raw}}
				</div>
			{% endif %}
		{% else %}
			<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" viewbox="-20 -20 208 208" xml:space="preserve">
				<circle cx="84" cy="84" r="73.5" opacity="0.75" style="opacity: 0.75; fill: #000000;"></circle>
				<circle class="open-close-solid-stroke" cx="84" cy="84" r="61" opacity="1" style="opacity: 1; fill: none; stroke: #ffffff; stroke-width: 3; stroke-miterlimit: 10;"></circle>
				<g transform="matrix(1,0,0,1,0,0)" style="fill: #ffffff;">
					<rect x="72" y="82" width="24" height="4"></rect>
					<rect x="82" y="72" width="4" height="24"></rect>
				</g>
			</svg>
		{% endif %}
	</label>
</div>
